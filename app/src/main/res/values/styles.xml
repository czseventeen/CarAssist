<resources>


<!--below is the theme for the main activity-->

    <style name="AppTheme" parent="Theme.AppCompat.Light">
            <item name="android:actionBarStyle">@style/MyActionBarTheme</item>

            <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>
            <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewAppTheme</item>
            <item name="android:listChoiceIndicatorMultiple">@drawable/apptheme_btn_check_holo_light</item>


            <item name="android:buttonStyle">@style/ButtonAppTheme</item>

            <item name="android:imageButtonStyle">@style/ImageButtonAppTheme</item>

            <item name="android:progressBarStyleHorizontal">@style/ProgressBarAppTheme</item>
    </style>

    <style name="AutoCompleteTextViewAppTheme" parent="android:Widget.Holo.Light.AutoCompleteTextView">
        <item name="android:dropDownSelector">@drawable/apptheme_list_selector_holo_light</item>
        <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>
    </style>

    <style name="MyActionBarTheme" parent="Theme.AppCompat.Light">

        <!-- Support library compatibility -->
        <item name="background">@color/apptheme_color</item>
    </style>

    <style name="ButtonAppTheme" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/apptheme_btn_default_holo_light</item>
    </style>

    <style name="ImageButtonAppTheme" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@drawable/apptheme_btn_default_holo_light</item>
    </style>

    <style name="ProgressBarAppTheme" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/apptheme_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/apptheme_progress_indeterminate_horizontal_holo_light</item>
    </style>


<!--Below are the theme for the login/register pages-->
    <style name="LoginTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:buttonStyle">@style/ButtonAppTheme_login</item>
        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewAppTheme</item>
        </style>


    <style name="ButtonAppTheme_login" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@color/apptheme_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>


    </style>

    <!-- Below are for the tab activities-->
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/apptheme_color</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
    </style>



    <!-- Below are for the MainActivity (ActionBar)-->
    <style name="Theme.Ab_" parent="Theme.AppCompat.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_ab_</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Ab_</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Ab_</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Ab_</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Ab_</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Ab_</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_ab_</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_ab_</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Ab_</item>


    </style>

    <style name="ActionBar.Solid.Ab_" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_ab_</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_ab_</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_ab_</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Ab_</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActionBar.Transparent.Ab_" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_ab_</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Ab_</item>
    </style>

    <style name="PopupMenu.Ab_" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_ab_</item>
    </style>

    <style name="DropDownListView.Ab_" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_ab_</item>
    </style>

    <style name="ActionBarTabStyle.Ab_" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_ab_</item>
    </style>

    <style name="DropDownNav.Ab_" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_ab_</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_ab_</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_ab_</item>
    </style>

    <style name="ProgressBar.Ab_" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_ab_</item>
    </style>

    <style name="ActionButton.CloseMode.Ab_" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_ab_</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Ab_.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Ab_</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Ab_</item>
    </style>


</resources>
