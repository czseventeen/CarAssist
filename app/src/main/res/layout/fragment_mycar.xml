<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jayxu.com.carassist.UI.HomeFragment"
    android:orientation="vertical"
    android:background="@color/WHITE">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/WHITE"
        android:id="@+id/mycar_TopImage_Layout"
        android:orientation="vertical"
        >

        <com.daimajia.numberprogressbar.NumberProgressBar
            android:id="@+id/battery_bar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/YourBatteryLeft"
            android:id="@+id/BatteryLeftText"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="30dp"
            android:textColor="@color/apptheme_color" />
    </FrameLayout>
