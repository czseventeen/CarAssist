
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jayxu.com.carassist.UI.HomeFragment"
    android:orientation="vertical"
    android:theme="@style/AppTheme">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:id="@+id/mycar_TopImage_Layout">
        <jayxu.com.carassist.UI.ScoreHexagonView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mystat_TopImage"
            android:layout_gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/apptheme_color"
            android:text="1%"
            android:background="@android:color/transparent"
            android:id="@+id/mystat_ScorePercent"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DrivingScore"
            android:id="@+id/MyStat_DrivingScoreTitle"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:textSize="17sp" />
    </FrameLayout>
    <View
        android:id="@+id/Mystat_SplitLine"
        android:layout_width="match_parent"
        android:layout_height= "1dp"
        android:background="@color/WHITE" />
