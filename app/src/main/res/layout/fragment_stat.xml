
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jayxu.com.carassist.UI.HomeFragment"
    android:orientation="vertical"
    android:background="@color/WHITE">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/WHITE"
        android:id="@+id/TopImage_Layout">
        <com.github.lzyzsd.circleprogress.DonutProgress
            android:id="@+id/donut_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:donut_progress="30"
            app:donut_suffix_text=""
            app:donut_text_size="45sp"
            android:layout_gravity="center|bottom"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DrivingScoreText"
            android:layout_gravity="center_horizontal|top"
            android:text="@string/DrivingScoreLabel" />
    </FrameLayout>
